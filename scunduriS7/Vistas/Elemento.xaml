<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scunduriS7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINAR" FontSize="20" HorizontalOptions="Center" TextColor="Red"/>
            <Entry x:Name="txtNombre" />
            <Entry x:Name="txtUsuario" />
            <Entry x:Name="txtContrasena" />
            <Button Text="ACTUALIZAR" x:Name="btnActualizar" Clicked="btnActualizar_Clicked"/>
            <Button Text="ELIMINAR" x:Name="btnEliminar" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>