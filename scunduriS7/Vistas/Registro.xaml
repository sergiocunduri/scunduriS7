<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scunduriS7.Vistas.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE REGISTRO" FontSize="24" TextColor="Red"/>
            <Entry x:Name="txtNombre" Placeholder="ingrese nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="ingrese usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="ingrese contraseña"/>
            <Button Text="INSERTAR" x:Name="btnIngresar" Clicked="btnIngresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>